# ============================================================================
# Semantic Layer Metadata Management API - Environment Configuration
# ============================================================================

# -----------------------------------------------------------------------------
# SECURITY: API Authentication
# -----------------------------------------------------------------------------
# Configure authentication methods (JWT and/or API Key)

# JWT Secret Key - Generate a strong secret key for JWT token signing
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-here-change-me

# JWT Token Expiration (hours)
JWT_EXPIRATION_HOURS=24

# API Keys - Comma-separated list of valid API keys
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
VALID_API_KEYS=api-key-1,api-key-2,api-key-3

# Alternative: Individual API keys
# VALID_API_KEY_1=api-key-1
# VALID_API_KEY_2=api-key-2
# VALID_API_KEY_3=api-key-3

# DANGER: Disable authentication (ONLY for local development)
# NEVER set this to true in production!
DISABLE_AUTH=false

# -----------------------------------------------------------------------------
# SECURITY: CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
# Production: Set to your actual frontend URLs
# Development: Include localhost ports
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-app.com

# -----------------------------------------------------------------------------
# SECURITY: Rate Limiting
# -----------------------------------------------------------------------------
# Redis URL for rate limiting (use memory:// for development)
# Production: Use Redis for distributed rate limiting
# Development: Use memory:// (single process only)
REDIS_URL=memory://
# REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# SECURITY: Environment & Debug Mode
# -----------------------------------------------------------------------------
# Environment: development or production
# Controls debug mode, host binding, and security settings
ENVIRONMENT=development

# Debug mode (ONLY for development)
# Production: MUST be false
# Development: Can be true for detailed error messages
DEBUG=false

# -----------------------------------------------------------------------------
# TREASURE DATA CONFIGURATION
# -----------------------------------------------------------------------------
# TD API Key
TD_API_KEY=your-td-api-key-here

# TD Region (us01, jp01, eu01, etc.)
TD_REGION=us01

# Semantic Layer Database Name
SEMANTIC_DB=semantic_layer_v1

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
# Server port
PORT=5000
