# ============================================================================
# Semantic Layer Config UI API - Environment Configuration
# ============================================================================

# -----------------------------------------------------------------------------
# SECURITY: API Authentication
# -----------------------------------------------------------------------------
# JWT Secret Key
JWT_SECRET_KEY=your-secret-key-here-change-me

# JWT Token Expiration (hours)
JWT_EXPIRATION_HOURS=24

# API Keys - Comma-separated list
VALID_API_KEYS=api-key-1,api-key-2

# DANGER: Disable authentication (development only!)
DISABLE_AUTH=false

# -----------------------------------------------------------------------------
# SECURITY: CORS Configuration
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# SECURITY: Rate Limiting
# -----------------------------------------------------------------------------
REDIS_URL=memory://
# REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# SECURITY: Environment & Debug Mode
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=false

# -----------------------------------------------------------------------------
# SECURITY: File Path Validation
# -----------------------------------------------------------------------------
# Allowed directories for config and workflow files
ALLOWED_CONFIG_DIR=./configs
ALLOWED_WORKFLOW_DIR=./workflows

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------
# Config file path (must be within ALLOWED_CONFIG_DIR)
CONFIG_PATH=./configs/config.yaml

# Workflow generator path (must be within ALLOWED_WORKFLOW_DIR)
WORKFLOW_GENERATOR_PATH=./workflows/workflow_generator.py

# Workflow project name (alphanumeric, underscore, hyphen only)
WORKFLOW_PROJECT_NAME=semantic_layer_sync

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
PORT=5000
